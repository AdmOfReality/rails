<h1><%= t('.header', title: @test_passage.test.title) %></h1>

<% if @test_passage.timed_out? %>
  <p><span class="red"><%= t(".timer_false") %>!</span></p>
<% elsif @test_passage.success? %>
  <p><%= t('.success') %> <span class="green"><%= t('.score', score: @test_passage.current_rate.to_i) %></span> %!</p>
<% else %>
  <p><%= t('.fail') %> <span class="red"><%= t('.score', score: @test_passage.current_rate.to_i) %></span> %!</p>
<% end %>

<p>
  <%= link_to t('global_buttons.all_tests'), tests_path %>
</p>
