<html>
  <head>
    <title>RailsExercise</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application",media: "all", "data-turbo-track": "reload" %>
