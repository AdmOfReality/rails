<div class="card border-dark">
  <div class="card-body">
		<table class="table table-hover table-bordered border-primary">
			<thead class ="table-dark">
				<tr align="center">
					<th scope="col" class="col-4"><strong><%= t('admin.answers.show.header')%></strong></th>
					<th scope="col" colspan='3' class="col-1"><strong><%= t('admin.tests.index.actions')%></strong></th>
				</tr>
			</thead>
				<tbody class="table-group-divider">
					<tr align="center">
						<td class="col-4"><%= question.body %></td>
						<td class="col-1"><%= button_to t('global_buttons.show'), admin_question_path(question),
						 :method => :get, class: "btn btn-primary" %></td>
						<td class="col-1"><%= button_to t('global_buttons.edit'), edit_admin_question_path(question), :method => :get, class: "btn btn-primary"  %></td>
						<td class="col-1"><%= button_to t('global_buttons.delete'), admin_question_path(question),
							:method => :delete, data: { turbo_confirm: t('global_buttons.warning')},
							class: "btn btn-primary" %></td>
				  </tr>
				</tbody>
		</table>
	</div>
</div>

