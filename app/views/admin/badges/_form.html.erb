<%= form_with model: [:admin, @badge], local: true do |f| %>

  <%= render 'shared/errors', resource: @badge %>

  <div>
    <%= f.label :name, t('.name') %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :image, t('.url_image') %>
    <%= f.text_field :image %>
  </div>

  <div>
    <%= f.label :badge_rule_id, t('.rule') %>
    <%= f.collection_select :badge_rule_id, @badge_rules, :id, :name, prompt: t('.chooze_rule') %>
  </div>

  <div>
    <%= f.submit t('.save') %>
  </div>

<% end %>
