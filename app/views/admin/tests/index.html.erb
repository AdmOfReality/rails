<h1 align="center"><%= t('.header') %></h1>

<table class="table">
  <tr align="center">
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'octicon-arrow-up hide' %>
      <%= octicon 'arrow-down', class: 'octicon-arrow-down hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.category') %></th>
    <th><%= t('.owner') %></th>
    <th><%= t('.questions') %></th>
    <th colspan='3'><%= t('.actions') %></th>
  </tr>
  <tbody class="table-group-divider">
    <%= render @tests %>
  </tbody>
</table>

<p>
  <%= button_to t('global_buttons.new'), new_admin_test_path, method: :get, class: "btn btn-primary mb-2" %>
</p>
