<div class="card border-dark">
  <div class="card-body">
		<table class="table table-hover">
			<thead class ="table-dark">
				<tr align="center">
					<th scope="col"><strong><%=t('tests.index.title')%>:</strong></th>
					<th scope="col"><strong><%=t('tests.index.level')%>:</strong></th>
					<th scope="col" colspan='3' ><strong><%=t('tests.index.actions')%></strong></th>
				</tr>
			</thead>
				<tbody class="table-group-divider">
					<tr align="center">
						<td>
							<%= @test.title %>
						</td>
						<td>
							<%= @test.level %>
						</td>
						<td class="col-1">
						<%= button_to t('global_buttons.edit'),
						edit_admin_test_path(@test),
						:method => :get,
						class: "btn btn-primary" %>
						</td>
						<td class="col-2">
						<%= button_to t('global_buttons.new_question'),
						new_admin_test_question_path(@test),
						:method => :get,
						class: "btn btn-primary" %>
						</td>
						<td class="col-1">
						<%= button_to t('global_buttons.back'),
						admin_tests_path,
						:method => :get,
						class: "btn btn-primary" %>
						</td>
					</tr>
				</tbody>
		</table>	
	</div>
</div>
<br>		
<%= render partial: 'admin/questions/question', collection: @test.questions %>
