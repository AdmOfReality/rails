<% if user_signed_in? %>
  <p class="nav user">Добро пожаловать, <b><%= current_user.email %></b> <%= link_to "Rails", root_path %></p>
  <p class="nav user"><%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete } %></p>
<% else %>
  <header>
    <div>
      <nav>
        <ul>
          <li><%= button_to "Signup", new_user_registration_path, method: :get %></li>
          <li><%= button_to "Login", user_session_path, method: :get %></li>
        </ul>
      </nav>
    </div>
  </header>
<% end %>