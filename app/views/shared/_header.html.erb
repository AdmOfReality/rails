<% if logged_in? %>
  <p class="nav user">Добро пожаловать, <b><%= current_user.email %></b> <%= link_to "Rails", root_path %></p>
  <p class="nav user"><%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %></p>
<% else %>
  <header>
    <div>
      <nav>
        <ul>
          <li><%= button_to "Sign up", 'signup', method: :get %></li>
          <li><%= button_to "Log in", 'login', method: :get %></li>
        </ul>
      </nav>
    </div>
  </header>
<% end %>