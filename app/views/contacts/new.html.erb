<h1><%= t('.header') %></h1>

<%= form_with model: @contact, url: contact_path, local: true do |form| %>
  <div>
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name %>
    <% if @contact.errors[:name].any? %>
      <div class="error_message">
        <%= @contact.errors.full_messages_for(:name).join(', ') %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :email, t('.email') %>
    <%= form.email_field :email %>
    <% if @contact.errors[:email].any? %>
      <div class="error_message">
        <%= @contact.errors.full_messages_for(:email).join(', ') %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :message, t('.message') %><br>
    <%= form.text_area :message %>
    <% if @contact.errors[:message].any? %>
      <div class="error_message">
        <%= @contact.errors.full_messages_for(:message).join(', ') %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit t('.send') %>
  </div>
<% end %>
