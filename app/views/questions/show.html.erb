<h1><%= @question.test.title %> Question</h1>


<p>
	<%= @question.body %>
</p>

<h2>Answers</h2>

<%= button_to 'New answer', new_question_answer_path(@question), :method => :get %>

<ol>
	<%= render @question.answers %>
</ol>

<%= button_to 'Edit', edit_question_path(@question), :method => :get %>
<%= button_to 'Back', test_path(@question.test), :method => :get %>