<table border="11">
	<tr align="center">
		<th><strong><%= t('admin.answers.show.header') %></strong></th>
		<th colspan='4'><strong><%= t('admin.tests.index.actions')%></strong></th>
	</tr>
	<tr align="center">
		<td><%= question.body %></td>
		<td><%= button_to t('global_buttons.show'), admin_question_path(question), :method => :get %></td>
		<td><%= button_to t('global_buttons.new'), new_admin_test_question_path(@test), :method => :get %></td>
		<td><%= button_to t('global_buttons.edit'), edit_admin_question_path(question), :method => :get %></td>
		<td><%= button_to t('global_buttons.delete'), admin_question_path(question), :method => :delete,
    		data: { turbo_confirm: t('global_buttons.warning')} %></td>
    </tr>
</table>

