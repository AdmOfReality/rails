<h2>Добро пожаловать на тесты!</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('global_buttons.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('global_buttons.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('global_buttons.remember_me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('global_buttons.enter') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
