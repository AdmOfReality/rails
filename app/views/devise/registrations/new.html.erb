<h2><%= t '.header' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t('global_buttons.email')%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('global_buttons.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('.length') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('global_buttons.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :first_name, t('global_buttons.first_name') %><br />
    <%= f.text_field :first_name, autocomplete: "first-name" %>
  </div>

  <div class="field">
    <%= f.label :last_name, t('global_buttons.last_name') %><br />
    <%= f.text_field :last_name, autocomplete: "last-name" %>
  </div>

  <div class="actions">
    <%= f.submit t('global_buttons.signup') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
